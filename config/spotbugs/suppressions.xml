<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!--
     THIS SHOULD ONLY BE USED FOR CHECKS THAT CAN'T BE TURNED OFF WITH
     SUPPRESSION COMMENTS OR @SuppressFBWarnings(..)
    -->
    <Match>
        <!-- Exclude generated sources   -->
        <Source name="~.*[\\/]build[\\/]generated[\\/]source.*" />
    </Match>

    <Match>
        <!-- Exclude generated sources   -->
        <Source name="~.*[\\/]jmh_generated[\\/].*" />
    </Match>

    <Match>
        <!-- Disable this check as it leads to longer names and harder to read code -->
        <!-- Discussion: https://github.com/spotbugs/spotbugs/issues/2627 -->
        <Bug pattern="PI_DO_NOT_REUSE_PUBLIC_IDENTIFIERS_CLASS_NAMES"/>
    </Match>

    <Match>
        <!-- Disable this check as throwing from a constructor is a common pattern and totally fine as long as no finalizer is used. -->
        <!-- Finalizers are a dead pattern -->
        <Bug pattern="CT_CONSTRUCTOR_THROW"/>
    </Match>

</FindBugsFilter>